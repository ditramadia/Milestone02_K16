// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Faculty {
    // Fakultas
    id      Int     @id @default(autoincrement())
    name    String
    acronym String
    Major   Major[]
}

model Major {
    // Jurusan kuliah
    id                    Int                     @id @default(autoincrement())
    code                  Int                     @db.SmallInt
    name                  String                  @db.VarChar(255)
    acronym               String                  @db.VarChar(10)
    faculty               Faculty                 @relation(fields: [facultyId], references: [id])
    facultyId             Int
    SubjectRecommendation SubjectRecommendation[]
    Subject               Subject[]
}

enum SubjectType {
    COMPULSORY
    ELECTIVE
}

model Subject {
    id                    Int                     @id @default(autoincrement())
    name                  String                  @db.VarChar(255)
    description           String                  @db.Text
    credits               Int                     @db.SmallInt
    type                  SubjectType             @default(COMPULSORY)
    major                 Major                   @relation(fields: [majorId], references: [id])
    SubjectRecommendation SubjectRecommendation[]
    majorId               Int
    Review                Review[]
}

model SubjectRecommendation {
    id        Int     @id @default(autoincrement())
    subject   Subject @relation(fields: [subjectId], references: [id])
    major     Major   @relation(fields: [majorId], references: [id])
    subjectId Int
    majorId   Int
    semester  Int
}

model Review {
    id                 Int     @id @default(autoincrement())
    subject            Subject @relation(fields: [subjectId], references: [id])
    description        String  @db.Text
    challenge          String? @db.Text
    advice             String? @db.Text
    lecturer           String? @db.VarChar(255)
    rateMaterial       Int?    @db.SmallInt
    rateAssignment     Int?    @db.SmallInt
    rateRecommendation Int?    @db.SmallInt
    voteCount          Int     @default(0)
    subjectId          Int
}
